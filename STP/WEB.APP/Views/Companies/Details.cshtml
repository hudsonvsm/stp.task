@model WEB.APP.Models.Company


@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Details</h2>

<div>
    <h4>Company</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Employees)
        </dt>
        @if (Model.Employees.Count > 0)
        {
            <dd>
                <table class="table">
                   @foreach (var item in Model.Employees)
                     {
                    <tr>
                        <th>@Html.DisplayNameFor(modelItem => item.Id)</th>
                        <th>@Html.DisplayNameFor(modelItem => item.FullName)</th>
                        <th>@Html.DisplayNameFor(modelItem => item.Experiance)</th>
                        <th>@Html.DisplayNameFor(modelItem => item.StartDate)</th>
                        <th>@Html.DisplayNameFor(modelItem => item.VacationDays)</th>
                        <th></th>
                        <th></th>
                        <th></th>
                    </tr>
                        break;
                     }
                   @foreach (var item in Model.Employees)
                     {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Id)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.FullName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Experiance)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.StartDate)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.VacationDays)
                            </td>
                            <td>
                                @Html.ActionLink("Edit", "Edit", "Employees", new { id = item.Id }, new { @class = "btn btn-outline-primary" }) |
                                @Html.ActionLink("Details", "Details", "Employees", new { id = item.Id }, new { @class = "btn btn-outline-success" }) |
                                @Html.ActionLink("Delete", "Delete", "Employees", new { id = item.Id }, new { @class = "btn btn-outline-danger" })
                            </td>
                        </tr>
                     }
                </table>
            </dd>
        }
        </dl>
</div>
<p>
    @Html.ActionLink("Add New Employee", "Create", "Employees", null, new { @class = "btn btn-outline-info" }) |
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }, new { @class = "btn btn-outline-primary" }) |
    @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-outline-secondary" })
</p>
